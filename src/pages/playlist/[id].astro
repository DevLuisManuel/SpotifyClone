---
import Layout from "@/layouts/Layout.astro";
import PlayListItemCard from "@/components/PlayListItemCard.astro";
import {allPlaylists, songs} from "@/lib/data";

const {id} = Astro.params

const playlist = allPlaylists.find(playlist => playlist.id === id);
---

<Layout title="Spotify Clone by MidudevLive">
    <div id="playlist-container" class="relative transition-all duration-1000 bg-green-600">
        <!-- <PageHeader /> -->
        <div class="relative z-10 px-6 pt-10">
            <!-- <Greeting /> -->
            <h1 class="text-4xl font-bold">Good Afternoon</h1>
            <div class="flex flex-wrap mt-4">
                {
                    playlists.map(playlist =>
                            <PlayListItemCard playlist={playlist}/>)
                }
            </div>
        </div>
        <div class="absolute inset-0 bg-gradient-to-t from-zinc-900 via-zinc-900/80"></div>
    </div>
</Layout>
